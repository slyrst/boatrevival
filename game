  <!-- CREATE WORLD MODAL -->
  <div class="modal" id="createWorldModal">
    <div class="modal-content">
      <h3>Create New World</h3>
      <div class="form-group"><label>World Name</label><input id="worldName" placeholder="Enter world name" /></div>
      <div class="form-group"><label>World Type</label>
        <select id="worldType">
          <option value="Grasslands">Grasslands</option>
          <option value="Desert Oasis">Desert Oasis</option>
          <option value="Volcanic Island">Volcanic Island</option>
          <option value="Winter Wonderland">Winter Wonderland</option>
          <option value="Forest Grove">Forest Grove</option>
          <option value="Rocky Canyon">Rocky Canyon</option>
        </select>
      </div>
      <div class="form-group"><label><input type="checkbox" id="worldPublic" /> Make this world public</label></div>
      <button class="auth-button" onclick="createWorld()">Create World</button>
      <button class="auth-button" style="background:#666" onclick="closeCreateWorldModal()">Cancel</button>
      <div class="error-message" id="createWorldError"></div>
    </div>
  </div>

  <!-- GAME -->
  <div class="game-container" id="gameContainer">
    <canvas id="gameCanvas"></canvas>
    <button class="back-btn" onclick="backToMenu()">Back to Menu</button>
    <div class="ui-overlay">
      <div>World: <span id="currentWorldName">—</span></div>
      <div>Players: <span id="playerCount">1</span>/50</div>
    </div>
    <div class="controls">Use WASD / Arrow Keys to move</div>
  </div>

  <script type="module">
    /***** 🔧 1) Firebase Setup *****/
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
    import { getAuth, onAuthStateChanged, GoogleAuthProvider, signInWithEmailAndPassword, createUserWithEmailAndPassword, updateProfile, signInWithPopup, signOut } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';
    import { getFirestore, collection, addDoc, doc, setDoc, updateDoc, getDocs, onSnapshot, query, where, orderBy, serverTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';
    import { getDatabase, ref, onValue, set, update, onDisconnect, remove, serverTimestamp as rtdbServerTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js';

    // ❗ Replace with your Firebase project config
    const firebaseConfig = {
      apiKey: "YOUR_API_KEY",
      authDomain: "YOUR_AUTH_DOMAIN",
      projectId: "YOUR_PROJECT_ID",
      storageBucket: "YOUR_STORAGE_BUCKET",
      messagingSenderId: "YOUR_SENDER_ID",
      appId: "YOUR_APP_ID",
      databaseURL: "YOUR_DATABASE_URL" // required for Realtime DB presence/positions
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);
    const rtdb = getDatabase(app);
    const googleProvider = new GoogleAuthProvider();

    /***** 2) UI Helpers *****/
    const $ = (id) => document.getElementById(id);
    const authScreen = $('authScreen');
    const mainMenu = $('mainMenu');
    const gameContainer = $('gameContainer');

    // Sections
    window.showSection = (e, name) => {
      document.querySelectorAll('.sidebar-btn').forEach(b=>b.classList.remove('active'));
      e.currentTarget.classList.add('active');
      document.querySelectorAll('.section').forEach(s=>s.classList.remove('active'));
      $(name).classList.add('active');
    };

    // Auth toggles
    $('toRegister').onclick = () => { $('loginForm').style.display='none'; $('registerForm').style.display='block'; $('loginError').textContent=''; };
    $('toLogin').onclick = () => { $('registerForm').style.display='none'; $('loginForm').style.display='block'; $('registerError').textContent=''; };

    // Buttons
    $('loginBtn').onclick = async () => {
      const email = $('loginEmail').value.trim();
      const pass = $('loginPassword').value;
      const err = $('loginError');
      if (!email || !pass) return err.textContent = 'Please fill in all fields';
      try {
        await signInWithEmailAndPassword(auth, email, pass);
        err.textContent = '';
      } catch (e) { err.textContent = e.message; }
    };

    $('registerBtn').onclick = async () => {
      const username = $('registerUsername').value.trim();
      const email = $('registerEmail').value.trim();
      const pass = $('registerPassword').value;
      const err = $('registerError');
      if (!username || !email || !pass) return err.textContent = 'Please fill in all fields';
      try {
        const cred = await createUserWithEmailAndPassword(auth, email, pass);
        await updateProfile(cred.user, { displayName: username });
        err.textContent = '';
      } catch (e) { err.textContent = e.message; }
    };

    $('googleBtn').onclick = () => signInWithPopup(auth, googleProvider).catch(console.error);
    $('googleBtn2').onclick = () => signInWithPopup(auth, googleProvider).catch(console.error);
    $('logoutBtn').onclick = () => signOut(auth);

    /***** 3) Worlds (Cloud: Firestore) *****/
    const worldsCol = collection(db, 'worlds');

    async function createWorldDoc({ name, type, isPublic, owner }) {
      const worldId = crypto.randomUUID();
      const docRef = doc(db, 'worlds', worldId);
      await setDoc(docRef, {
        id: worldId,
        name,
        type,
        public: !!isPublic,
        owner: owner.uid,
        ownerName: owner.displayName || 'Anonymous',
        ownerPhoto: owner.photoURL || '',
        createdAt: serverTimestamp(),
        players: 0
      });
      return worldId;
    }

    async function loadMyWorlds(uid, cb) {
      const q = query(worldsCol, where('owner','==',uid), orderBy('createdAt','desc'));
      return onSnapshot(q, (snap) => {
        const arr = snap.docs.map(d=>({ id:d.id, ...d.data() }));
        cb(arr);
      });
    }

    async function loadPublicWorlds(cb) {
      const q = query(worldsCol, where('public','==',true), orderBy('createdAt','desc'));
      return onSnapshot(q, (snap) => {
        const arr = snap.docs.map(d=>({ id:d.id, ...d.data() }));
        cb(arr);
      });
    }

    function renderWorlds(gridId, list, showOwner=false) {
      const grid = $(gridId);
      grid.innerHTML = '';
      if (!list.length) { grid.innerHTML = '<p style="color:#fff">No worlds yet.</p>'; return; }
      for (const w of list) {
        const el = document.createElement('div');
        el.className = 'world-card';
        el.innerHTML = `
          <div class="world-thumbnail">🌍</div>
          <div class="world-info">
            <div class="world-name">${w.name}</div>
            <div class="world-players">${w.type} • ${(w.players||0)}/50 players</div>
            <div style="font-size:12px; opacity:.7; margin-top:4px;">${w.public? 'Public':'Private'}${showOwner? ` • by ${w.ownerName||'Unknown'}`:''}</div>
          </div>
          <button class="play-world-btn" data-id="${w.id}">Play</button>
        `;
        el.querySelector('button').onclick = () => playWorld(w);
        grid.appendChild(el);
      }
    }

    // Modal controls
    window.showCreateWorldModal = () => $('createWorldModal').style.display='flex';
    window.closeCreateWorldModal = () => { $('createWorldModal').style.display='none'; $('worldName').value=''; $('worldPublic').checked=false; $('createWorldError').textContent=''; };

    window.createWorld = async () => {
      const name = $('worldName').value.trim();
      const type = $('worldType').value;
      const isPublic = $('worldPublic').checked;
      const err = $('createWorldError');
      if (!auth.currentUser) return;
      if (!name) return err.textContent = 'Please enter a world name';
      try {
        const id = await createWorldDoc({ name, type, isPublic, owner: auth.currentUser });
        // update UI automatically via onSnapshot
        window.closeCreateWorldModal();
      } catch(e) { err.textContent = e.message; }
    };

    /***** 4) Presence + Live Positions (Realtime DB) *****/
    const MAP_W = 2000, MAP_H = 1500, TILE = 64;

    const mapTypes = {
      'Grasslands': { primary: '#4a7c59', secondary: '#8b8680' },
      'Desert Oasis': { primary: '#f4e4bc', secondary: '#4a90e2' },
      'Volcanic Island': { primary: '#8b8680', secondary: '#ff4757' },
      'Winter Wonderland': { primary: '#ffffff', secondary: '#4a90e2' },
      'Forest Grove': { primary: '#4a7c59', secondary: '#deb887' },
      'Rocky Canyon': { primary: '#8b8680', secondary: '#8b4513' }
    };

    let canvas = $('gameCanvas');
    let ctx = canvas.getContext('2d');
    let keys = {};
    let camera = { x:0, y:0 };
    let player = { x: 400, y: 300, width: 32, height: 32, speed: 5, color: '#ff6b6b' };
    let currentWorld = null;
    let tiles = [];
    let roomRef = null, myPlayerRef = null, unsubPresence = null;
    let otherPlayers = {};

    window.addEventListener('keydown', (e)=>{ keys[e.code]=true; });
    window.addEventListener('keyup', (e)=>{ keys[e.code]=false; });
    window.addEventListener('resize', resizeCanvas);

    function resizeCanvas(){ canvas.width = innerWidth; canvas.height = innerHeight; }
    resizeCanvas();

    function generateMap(type){
      const cfg = mapTypes[type] || mapTypes['Grasslands'];
      tiles = [];
      const cols = Math.ceil(MAP_W / TILE), rows = Math.ceil(MAP_H / TILE);
      for (let y=0;y<rows;y++){
        tiles[y]=[];
        for (let x=0;x<cols;x++){
          const n = Math.sin(x*.1)*Math.cos(y*.1) + Math.sin(x*.05)*Math.cos(y*.05)*.5;
          tiles[y][x] = n>0.2? cfg.secondary: cfg.primary;
        }
      }
    }

    function handleInput(){
      let dx=0, dy=0;
      if (keys['ArrowLeft']||keys['KeyA']) dx -= player.speed;
      if (keys['ArrowRight']||keys['KeyD']) dx += player.speed;
      if (keys['ArrowUp']||keys['KeyW']) dy -= player.speed;
      if (keys['ArrowDown']||keys['KeyS']) dy += player.speed;
      if (dx && dy){ dx*=0.707; dy*=0.707; }
      player.x = Math.max(16, Math.min(MAP_W-16, player.x+dx));
      player.y = Math.max(16, Math.min(MAP_H-16, player.y+dy));
      camera.x = Math.max(0, Math.min(MAP_W - canvas.width, player.x - canvas.width/2));
      camera.y = Math.max(0, Math.min(MAP_H - canvas.height, player.y - canvas.height/2));
    }

    function drawMap(){
      const startX = Math.floor(camera.x / TILE), startY = Math.floor(camera.y / TILE);
      const endX = Math.ceil((camera.x+canvas.width)/TILE), endY = Math.ceil((camera.y+canvas.height)/TILE);
      for (let y=startY;y<endY;y++){
        for (let x=startX;x<endX;x++){
          if (!tiles[y]||!tiles[y][x]) continue;
          ctx.fillStyle = tiles[y][x];
          ctx.fillRect(x*TILE - camera.x, y*TILE - camera.y, TILE, TILE);
        }
      }
    }

    function drawPlayers(){
      // draw other players
      for (const uid in otherPlayers){
        const p = otherPlayers[uid];
        if (!p || !p.pos) continue;
        ctx.fillStyle = p.color || '#222';
        ctx.beginPath();
        ctx.arc(p.pos.x - camera.x, p.pos.y - camera.y, 16, 0, Math.PI*2);
        ctx.fill();
        ctx.fillStyle = '#fff';
        ctx.font = '12px Arial';
        ctx.fillText(p.name||'Player', p.pos.x - camera.x - 24, p.pos.y - camera.y - 20);
      }
      // draw me
      ctx.fillStyle = player.color;
      ctx.fillRect(player.x - 16 - camera.x, player.y - 16 - camera.y, 32, 32);
    }

    let lastSend = 0;
    function maybeSendPosition(){
      const now = performance.now();
      if (now - lastSend < 50) return; // ~20 Hz
      lastSend = now;
      if (myPlayerRef){
        update(myPlayerRef, { pos: { x: Math.round(player.x), y: Math.round(player.y) }, ts: rtdbServerTimestamp() });
      }
    }

    function gameLoop(){
      if (!currentWorld) return;
      handleInput();
      ctx.clearRect(0,0,canvas.width,canvas.height);
      drawMap();
      drawPlayers();
      maybeSendPosition();
      requestAnimationFrame(gameLoop);
    }

    async function updateWorldPlayerCount(worldId){
      // Count from RTDB players length and mirror to Firestore.
      const playersRef = ref(rtdb, `rooms/${worldId}/players`);
      onValue(playersRef, async (snap) => {
        const val = snap.val()||{}; const count = Object.keys(val).length;
        $('playerCount').textContent = count;
        try { await updateDoc(doc(db,'worlds',worldId), { players: count }); } catch{}
      });
    }

    async function joinRoom(world){
      const uid = auth.currentUser.uid;
      roomRef = ref(rtdb, `rooms/${world.id}`);
      myPlayerRef = ref(rtdb, `rooms/${world.id}/players/${uid}`);

      const me = {
        uid,
        name: auth.currentUser.displayName || 'Anonymous',
        photo: auth.currentUser.photoURL || '',
        color: player.color,
        pos: { x: player.x, y: player.y },
        joinedAt: rtdbServerTimestamp()
      };
      await set(myPlayerRef, me);
      onDisconnect(myPlayerRef).remove();

      // Listen others
      const playersRef = ref(rtdb, `rooms/${world.id}/players`);
      if (unsubPresence) unsubPresence();
      unsubPresence = onValue(playersRef, (snap)=>{
        const val = snap.val()||{}; delete val[uid]; otherPlayers = val; // others only
      });

      updateWorldPlayerCount(world.id);
    }

    window.playWorld = async (world) => {
      currentWorld = world;
      $('currentWorldName').textContent = world.name;
      mainMenu.style.display = 'none';
      gameContainer.style.display = 'block';
      generateMap(world.type);
      resizeCanvas();
      await joinRoom(world);
      requestAnimationFrame(gameLoop);
    };

    window.backToMenu = async () => {
      if (myPlayerRef) { try { await remove(myPlayerRef); } catch{} }
      currentWorld = null; otherPlayers = {}; roomRef = null; myPlayerRef = null;
      gameContainer.style.display = 'none';
      mainMenu.style.display = 'block';
    };

    /***** 5) Auth state -> wire UI + data *****/
    onAuthStateChanged(auth, async (user) => {
      if (user) {
        // UI
        $('userName').textContent = user.displayName || 'Player';
        $('userEmail').textContent = user.email || '';
        $('userAvatar').src = user.photoURL || 'https://via.placeholder.com/80';
        authScreen.style.display = 'none';
        mainMenu.style.display = 'block';

        // Live worlds lists
        if (window._unsubMyWorlds) window._unsubMyWorlds();
        if (window._unsubPublicWorlds) window._unsubPublicWorlds();
        window._unsubMyWorlds = await loadMyWorlds(user.uid, (arr)=>renderWorlds('myWorldsGrid', arr));
        window._unsubPublicWorlds = await loadPublicWorlds((arr)=>renderWorlds('publicWorldsGrid', arr, true));
      } else {
        if (window._unsubMyWorlds) window._unsubMyWorlds();
        if (window._unsubPublicWorlds) window._unsubPublicWorlds();
        mainMenu.style.display = 'none';
        gameContainer.style.display = 'none';
        authScreen.style.display = 'flex';
      }
    });

    /***** 6) (Optional) Basic security rules (paste in Firebase console) *****
    // Firestore rules example:
    // rules_version = '2';
    // service cloud.firestore { match /databases/{database}/documents { match /worlds/{worldId} {
    //   allow read: if true; // or request.auth != null for authed only
    //   allow create: if request.auth != null && request.resource.data.owner == request.auth.uid;
